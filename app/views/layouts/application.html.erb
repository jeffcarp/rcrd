<!DOCTYPE html>
<html>
<head>
  <title>rcrd</title>
  <%= stylesheet_link_tag 'application' %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, user-scalable=no" />
</head>
<body>
  <div id="everything">
    <% if flash[:notice] %>
      <div class="margin-all white" style="<%= bg_color_now %>">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <header class="clearfix">
      <h1 class="logo"><a href="/">rcrd</a></h1>
      <ul>
        <% if current_user %>
          <li><a href="/">dashboard</a></li>
          <li><a href="/records/new">records</a></li>
          <li><a href="/settings">settings</a></li>
        <% else %>
          <li><a href="/sessions/new">dashboard</a></li>
        <% end %>
        <li><a href="/guide">guide</a></li>
      </ul>
    </header>
    <%= yield %>
  </div>
  <%= javascript_include_tag 'application' %>
</body>
</html>

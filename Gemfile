source 'http://rubygems.org'

gem 'rails', '3.2.13'
gem 'pg'

group :development, :test do
  gem 'rspec-rails'
end

gem 'json'
gem 'jquery-rails'
gem 'aws-s3'

gem 'bcrypt-ruby', require: 'bcrypt'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
  gem 'd3-rails'
  gem 'fungible-rails'
end

group :test do
  gem 'rake'
end

group :production do
  gem 'therubyracer'
  gem 'execjs'
end
